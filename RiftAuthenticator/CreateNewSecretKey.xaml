<Window x:Class="RiftAuthenticator.CreateNewSecretKey"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create a new secret key" Height="157" Width="439" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid>
        <TextBox Height="23" Margin="81,14,93,0" Name="DeviceId" VerticalAlignment="Top" />
        <Label Content="Device ID:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <Button Content="Recreate" Height="23" Margin="0,13,12,0" Name="RecreateDeviceId" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="RecreateDeviceId_Click" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="12,0,0,12" Name="CreateSecretKey" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="CreateSecretKey_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="button1" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
    </Grid>
</Window>
