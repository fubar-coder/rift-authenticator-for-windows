<Window x:Class="RiftAuthenticator.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="161" Width="279" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid>
        <Grid Margin="0,0,0,41">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label Content="Email:" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" />
            <Label Content="Password:" Grid.Row="1" HorizontalAlignment="Left" Name="label2" VerticalAlignment="Top" />
            <TextBox Grid.Column="1" Margin="0,0,0,0" Name="Email" />
            <PasswordBox Grid.Column="1" Grid.Row="1" Margin="0,0,0,0" Name="Password" />
        </Grid>
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="12,0,0,12" Name="DoLogin" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="DoLogin_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="Cancel" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
    </Grid>
</Window>
